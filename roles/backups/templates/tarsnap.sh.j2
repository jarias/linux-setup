#!/bin/bash

BASE_PATH=/home/{{ ansible_user_id }}

/usr/bin/tarsnap -c \
  --keyfile ${BASE_PATH}/bin/tarsnap.key \
  --cachedir ${BASE_PATH}/.cache/tarsnap \
  -f "$(uname -n)-$(date +%Y-%m-%d_%H-%M-%S)" \
  ${BASE_PATH}/Documents \
  ${BASE_PATH}/Pictures \
  ${BASE_PATH}/.ssh \
  ${BASE_PATH}/.local/share/buku \
  ${BASE_PATH}/.password-store \
  ${BASE_PATH}/.homesick
